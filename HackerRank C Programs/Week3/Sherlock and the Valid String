#include <stdio.h>
#include <stdlib.h>
#include <string.h>


char* isValid(char* s) {
    int freq[26] = {0};
    int len = strlen(s);

    
    for (int i = 0; i < len; i++) {
        freq[s[i] - 'a']++;
    }

    int freq_of_freq[len + 1];
    for (int i = 0; i < len + 1; i++) {
        freq_of_freq[i] = 0;
    }

    for (int i = 0; i < 26; i++) {
        if (freq[i] > 0) {
            freq_of_freq[freq[i]]++;
        }
    }

   
    int distinct_freqs = 0;
    int freq1 = 0, count1 = 0;
    int freq2 = 0, count2 = 0;

    for (int i = 0; i < len + 1; i++) {
        if (freq_of_freq[i] > 0) {
            distinct_freqs++;
            if (distinct_freqs == 1) {
                freq1 = i;
                count1 = freq_of_freq[i];
            } else if (distinct_freqs == 2) {
                freq2 = i;
                count2 = freq_of_freq[i];
            }
        }
    }

    if (distinct_freqs <= 1) {
        return "YES";
    }

    if (distinct_freqs == 2) {
        
        if ((freq1 == 1 && count1 == 1) || (freq2 == 1 && count2 == 1)) {
            return "YES";
        }
        
        if ((count1 == 1 && freq1 == freq2 + 1) || (count2 == 1 && freq2 == freq1 + 1)) {
            return "YES";
        }
    }

    return "NO";
}

int main() {
    char s[100001]; // Assuming max string length based on constraints
    scanf("%s", s);
    char* result = isValid(s);
    printf("%s\n", result);
    return 0;
}
