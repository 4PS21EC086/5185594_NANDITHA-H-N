#include <stdio.h>
#include <stdlib.h>

int diagonalDifference(int n, int arr[n][n]) {
    int primary = 0, secondary = 0;
    for (int i = 0; i < n; i++) {
        primary += arr[i][i];              // left-to-right diagonal
        secondary += arr[i][n - i - 1];    // right-to-left diagonal
    }
    return abs(primary - secondary);       // absolute difference
}

int main() {
    int n;
    scanf("%d", &n);

    int arr[n][n];
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    int result = diagonalDifference(n, arr);
    printf("%d\n", result);

    return 0;
}
