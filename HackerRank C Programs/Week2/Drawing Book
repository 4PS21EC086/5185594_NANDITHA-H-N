#include <stdio.h>

int pageCount(int n, int p) {
    int fromFront = p / 2;          // flips starting from page 1
    int fromBack  = (n / 2) - (p / 2); // flips starting from the back
    return (fromFront < fromBack) ? fromFront : fromBack;
}

int main(void) {
    int n, p;
    if (scanf("%d %d", &n, &p) != 2) return 0;
    printf("%d\n", pageCount(n, p));
    return 0;
}
